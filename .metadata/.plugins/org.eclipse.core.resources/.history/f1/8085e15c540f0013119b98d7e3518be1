package com.vnu.parabolicflight.util;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.text.SimpleDateFormat;
import java.util.ArrayList;

public class DataExporting {
	
	public static void Exporting(ArrayList<Data> list, File fileData) {
		int n = list.size();
		Data d;
		SimpleDateFormat df = new SimpleDateFormat("HH:mm:ss");

		try {
			FileWriter fw = new FileWriter(fileData);

			for (int i = 0; i < n; i++) {
				d = list.get(i);
				
				fw.write(Float.toString(d.getX()) + " "
						+ Float.toString(d.getX()) + " "
						+ Float.toString(d.getX()) + " "
						+ df.format(time));
			}

			fw.close();

		} catch (IOException e) {
		}

	}

}
